# ===========================================
# NEXALAR ML SERVICE - ENVIRONMENT VARIABLES
# ===========================================

# Application Settings
APP_NAME="Nexalar ML Service"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development | production

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=1  # Railway: 1 worker, Local: 4 workers
RELOAD=true  # Set to false in production

# Security
API_KEY="your-super-secret-api-key-change-this-in-production"
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173"  # Frontend URLs

# Model Paths (relative to ml-service/)
MODEL_DIR="./models"
PERSONA_MODEL_PATH="./models/persona/latest_model.pkl"
PERSONA_SCALER_PATH="./models/persona/latest_scaler.pkl"
NOTIFICATION_MODEL_PATH="./models/notification/notification_engine.pkl"
INSIGHT_MODEL_PATH="./models/insight/insight_generator.pkl"
POMODORO_MODEL_PATH="./models/pomodoro/pomodoro_recommender.pkl"

# Performance
MODEL_CACHE_ENABLED=true
REQUEST_TIMEOUT=30  # seconds
MAX_REQUEST_SIZE=10485760  # 10MB

# Logging
LOG_LEVEL="INFO"  # DEBUG | INFO | WARNING | ERROR
LOG_FORMAT="colorlog"  # colorlog | json

# Feature Validation
FEATURE_COUNT=18  # Must match selected features
STRICT_VALIDATION=true

# Railway Deployment (Auto-filled by Railway)
# RAILWAY_ENVIRONMENT=production
# RAILWAY_PUBLIC_DOMAIN=your-app.railway.app
